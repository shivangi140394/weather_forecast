<!DOCTYPE html>
<html>
<head>
  <title>Users</title>
  <%= stylesheet_link_tag 'styles' %>
</head>
<body>
  <div class="container">
    <p class="notice"><%= notice %></p>

    <h1>Users</h1>

    <table border='1'>
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Phone number</th>
          <th>Location</th>
          <th>City</th>
          <th>State</th>
          <th>Country</th>
          <th>Verified</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.full_phone_number %></td>
            <td><%= user.location %></td>
            <td><%= user.city %></td>
            <td><%= user.state %></td>
            <td><%= user.country %></td>
            <td><%= user.verified %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td>
              <%= form_with(model: user, url: user_path(user), method: :delete, data: { confirm: 'Are you sure?' }) do |form| %>
                <%= form.submit 'Delete', data: { turbo_frame: "user_#{user.id}" } %>
              <% end %>
             </td>
            <td>
              <%= link_to 'Weather forecast', user_forecasts_path(user) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New User', new_user_path %>
  </div>
</body>
</html>
