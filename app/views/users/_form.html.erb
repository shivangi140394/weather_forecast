<div class="form-container">
  <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :first_name %>
      <%= form.text_field :first_name %>
    </div>

    <div class="field">
      <%= form.label :last_name %>
      <%= form.text_field :last_name %>
    </div>

    <div class="field">
      <%= form.label :phone_number %>
      <div class="phone-input-container">
        <%= form.select :country_code, [['+1', '+1'], ['+91', '+91'], ['+44', '+44']], prompt: 'Select Country Code', id: 'user_country_code' %>
        <%#= form.text_field :phone_number, id: 'user_displayed_phone_number', placeholder: 'Enter Phone Number' %>
        <%= form.text_field :phone_number, id: 'user_phone_number', placeholder: 'Enter Phone Number' %>
      </div>
    </div>

    <div class="field">
      <%= form.label :location %>
      <%= form.text_field :location %>
    </div>

    <div class="field">
      <%= form.label :city %>
      <%= form.text_field :city %>
    </div>

    <div class="field">
      <%= form.label :state %>
      <%= form.text_field :state %>
    </div>

    <div class="field">
      <%= form.label :country %>
      <%= form.text_field :country %>
    </div>

    <div class="actions">
      <%= form.submit 'Submit' %>
    </div>
  <% end %>
</div>
